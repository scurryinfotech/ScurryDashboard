@{
    ViewData["Title"] = "Home Page";
}

@section styles {
    <style>


        #bill-modal {
            display: none;
            position: fixed;
            /* Above everything */
            left: 0;
            top: 0;
            width: 100%;
            height: 100%;
            overflow-y: auto;
            background-color: rgba(0,0,0,0.7);
            padding-top: 40px;
        }

            #bill-modal .modal-content {
                background-color: #fefefe;
                margin: auto;
                padding: 0;
                border: 1px solid #888;
                width: 90%;
                max-width: 800px;
                border-radius: 10px;
                box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            }

            #bill-modal .modal-header {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
                padding: 20px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                border-radius: 10px 10px 0 0;
            }

            #bill-modal .modal-title {
                margin: 0;
                font-size: 24px;
            }

            #bill-modal .close-btn {
                background: none;
                border: none;
                color: white;
                font-size: 32px;
                cursor: pointer;
                padding: 0;
                width: 40px;
                height: 40px;
                line-height: 40px;
                text-align: center;
                border-radius: 50%;
                transition: background 0.3s;
            }

                #bill-modal .close-btn:hover {
                    background: rgba(255,255,255,0.2);
                }

        #bill-content {
            padding: 20px;
            max-height: 70vh;
            overflow-y: auto;
            display: flex;
            justify-content: center;
            align-items: flex-start;
        }

        /* Bill Styling */
        .bill {
            font-family: 'Courier New', monospace;
            background: white;
            padding: 10px;
            border: 1px solid #000;
        }

        .bill-header {
            text-align: center;
            border-bottom: 2px dashed #333;
            padding-bottom: 20px;
            margin-bottom: 20px;
        }

        .restaurant-name {
            font-size: 28px;
            font-weight: bold;
            color: #333;
        }

        .restaurant-info {
            font-size: 14px;
            color: #666;
        }

        .bill-details {
            margin: 20px 0;
            padding: 15px;
            background: #f9f9f9;
            border-radius: 5px;
        }

        .bill-row {
            display: flex;
            justify-content: space-between;
            padding: 6px 0;
        }

        .bill-items {
            margin-top: 20px;
            padding: 15px;
            border-radius: 5px;
            border: 1px solid #ddd;
        }

        .bill-item {
            display: flex;
            justify-content: space-between;
            padding: 8px 0;
            border-bottom: 1px solid #eee;
        }

            .bill-item:last-child {
                border-bottom: none;
            }

        .bill-total {
            margin: 20px 0;
            padding: 20px;
            background: #f0f0f0;
            border-radius: 5px;
            font-weight: bold;
        }

        .bill-footer {
            text-align: center;
            padding-top: 20px;
            border-top: 2px dashed #333;
            color: #666;
        }

        /* Bill Buttons */
        .btn-print, .btn-view {
            padding: 12px 30px;
            font-size: 16px;
            border: none;
            border-radius: 6px;
            cursor: pointer;
            margin: 10px;
            font-weight: bold;
        }

        .btn-print {
            background: linear-gradient(135deg, #667eea, #764ba2);
            color: white;
        }

        .btn-view {
            background: linear-gradient(135deg, #f093fb, #f5576c);
            color: white;
        }

            .btn-print:hover,
            .btn-view:hover {
                transform: translateY(-2px);
            }
        /* Payment Modal Overlay (fixed and always on top) */
        #paymentModal.payment-modal-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.45);
            display: none;
            align-items: center;
            justify-content: center;
            pointer-events: auto !important;
        }

            #paymentModal.payment-modal-overlay.active {
                display: flex;
            }

        /* Payment Modal Box */
        .payment-modal {
            background: #fff;
            width: 420px;
            padding: 25px;
            border-radius: 10px;
            box-shadow: 0px 4px 20px rgba(0,0,0,0.30);
            position: relative;
            pointer-events: auto !important;
        }

        /* Header */
        .payment-modal-header {
            text-align: center;
            margin-bottom: 20px;
        }

        /* Options */
        .payment-options {
            display: flex;
            justify-content: space-between;
            gap: 15px;
        }

        .payment-option {
            border: 2px solid #ccc;
            padding: 15px;
            text-align: center;
            cursor: pointer;
            width: 48%;
            border-radius: 12px;
            background: #fafafa;
            transition: 0.25s;
        }

            .payment-option:hover {
                border-color: #00aaff;
            }

            .payment-option.selected {
                border-color: #00aaff;
                background: #e7f5ff;
            }

        /* Discount Input Fix */
        #discountInput {
            width: 100% !important;
            padding: 12px !important;
            border-radius: 6px !important;
            border: 1px solid #ccc !important;
            font-size: 16px !important;
            background: #fff !important;
            position: relative !important;
            z-index: 100 !important;
            pointer-events: auto !important;
        }

            #discountInput:focus {
                outline: none !important;
                border-color: #008cff !important;
                box-shadow: 0 0 5px rgba(0,140,255,0.4) !important;
            }

        #paymentModal {
            pointer-events: auto !important;
        }

            #paymentModal * {
                pointer-events: auto !important;
            }


        /* Payment Modal Buttons */
        .payment-modal-actions {
            margin-top: 25px;
            display: flex;
            justify-content: space-between;
        }

        .payment-btn {
            padding: 10px 18px;
            border-radius: 6px;
            width: 48%;
            border: none;
            cursor: pointer;
            font-size: 15px;
        }

        .payment-btn-cancel {
            background: #f1f1f1;
        }

        .payment-btn-confirm {
            background: #4CAF50;
            color: white;
        }

            .payment-btn-confirm:disabled {
                opacity: 0.5;
            }

        /* Error Message */
        .payment-error {
            display: none;
            margin-top: 10px;
            color: red;
            font-size: 14px;
        }

    </style>

}

<div class="container">

    <div style="display:flex; justify-content:space-between; align-items:center; margin-bottom:20px;">
    </div>

    <!--- Live Orders ---------->
    <div class="dashboard-section">
        <div class="section-title">
            <span>📊</span> Online Delivery
        </div>
        <div class="orders-grid" id="ordersContainer">
            <!-- Orders will be loaded here dynamically -->
        </div>
    </div>
    <!-- Table Management Section -->
    <div class="dashboard-section">
        <div class="section-title">
            <span>🍽️</span> Table Service
        </div>
        <div id="divTable">
        </div>
    </div>


    <!-- Enhanced Modal -->
    <div class="modal fade" id="divInProgressModal" tabindex="-1" role="dialog" aria-labelledby="orderModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    @* <h5 class="modal-title font-weight-bold" id="orderModalLabel">
                        <span class="modal-title"></span>
                    </h5> *@
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4 class="text-center font-weight-bold mb-3">Grill N Shakes</h4>
                    <h6 class="text-center font-weight-bold mb-3">Order Receipt</h6>
                    <div class="table-responsive">
                        <div id="orderDetails"></div>
                    </div>
                </div>
                <div class="modal-footer d-flex flex-column flex-md-row justify-content-end gap-2">
                    <button type="button" class="btn btn-success mb-2 mb-md-0" id="confirmOrderBtn">
                        <i class="fas fa-check"></i> Accept Order
                    </button>
                    <button type="button" class="btn btn-dark" data-dismiss="modal">
                        <i class="fas fa-times"></i> Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="divInProgressModalHome"  role="dialog" aria-labelledby="orderModalLabelHome" aria-hidden="true">
        <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    @*  <h5 class="modal-title font-weight-bold" id="orderModalLabel"> 
                        <span class="modal-title"></span>
                    </h5> *@
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h4 class="text-center font-weight-bold mb-3">Grill N Shakes</h4>
                    <h6 class="text-center font-weight-bold mb-3">Order Receipt</h6>
                    <div class="table-responsive">
                        <div id="orderDetailsHome"></div>
                    </div>
                </div>
                <div class="modal-footer d-flex flex-column flex-md-row justify-content-end gap-2">
                    
                    <button type="button" class="btn btn-dark" data-dismiss="modal">
                        <i class="fas fa-times"></i> Close
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!--Payment Modal -->
    <div id="paymentModal" class="payment-modal-overlay">
        <div class="payment-modal">
            <div class="payment-modal-header">
                <h3>Select Payment Mode</h3>
                <p>Choose how the customer paid for this order</p>
            </div>

            <!-- PAYMENT OPTIONS -->
            <div class="payment-options">
                <div class="payment-option" data-mode="cash">
                    <div class="payment-icon">💵</div>
                    <h4>Cash</h4>
                    <p>Paid in cash</p>
                </div>

                <div class="payment-option" data-mode="online">
                    <div class="payment-icon">💳</div>
                    <h4>Online</h4>
                    <p>Digital payment</p>
                </div>
            </div>

            <!-- DISCOUNT SECTION -->
            <div style="margin: 20px 0; text-align: left;">

                <button class="discount-option" id="disciount5">5%</button>
                <button class="discount-option" id="disciount10">10%</button>
                <button class="discount-option" id="disciount15">15%</button>
                <label for="discountInput" style="font-weight:600; font-size:14px; display:block; margin-bottom:5px;">
                    Discount (₹):
                </label>
                <input type="number"
                       id="discountInput"
                       placeholder="Enter discount amount"
                       inputmode="numeric"
                       min="0">
                <div id="paymentSummary" style="margin-top:14px; font-size:15px; border-top:1px dashed #e0e0e0; padding-top:12px;">
                    <div style="display:flex; justify-content:space-between; margin-bottom:6px;">
                        <span>Subtotal</span>
                        <strong id="paymentSubtotal">₹0.00</strong>
                    </div>
                    <div style="display:flex; justify-content:space-between; margin-bottom:6px;">
                        <span>Discount</span>
                        <strong id="paymentDiscount">₹0.00</strong>
                    </div>
                    <div style="display:flex; justify-content:space-between; font-weight:900; font-size:16px;">
                        <span>Final Amount</span>
                        <strong id="paymentFinal">₹0.00</strong>
                    </div>
                </div>
            </div>

            <!-- ERROR MESSAGE -->
            <div class="payment-error" id="paymentError">
                Please select a payment mode
            </div>

            <!-- ACTION BUTTONS -->
            <div class="payment-modal-actions">
                <button class="payment-btn payment-btn-cancel" id="cancelPayment">Cancel</button>
                <button class="payment-btn payment-btn-confirm" id="confirmPayment" disabled>
                    Complete Order
                </button>
            </div>
        </div>
    </div>



    <!-- Revenue Display Section -->
    <div class="alert alert-info">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h5 class="mb-1"><i class="fas fa-chart-line"></i> Revenue Summary</h5>
                <p class="mb-0" id="revenueDateRange">Today's Revenue</p>
            </div>
            <div class="text-right">
                <h3 class="mb-0" id="totalRevenue">₹0.00</h3>
                <small id="orderCount">0 Orders</small>
            </div>
        </div>
    </div>

    <!-- Order History Section with Infinite Scroll -->

    <div class="row g-2 align-items-center mb-3">
        <div class="col-12 col-sm-6 col-md-3">
            <input type="date" id="startDate" class="form-control" />
        </div>

        <div class="col-12 col-sm-6 col-md-3">
            <input type="date" id="endDate" class="form-control" />
        </div>

        <div class="col-12 col-sm-6 col-md-3 d-flex gap-2">
            <button id="btnFilter" class="btn btn-primary w-100">Filter</button>
        </div>

        <div class="col-12 col-sm-6 col-md-3 d-flex gap-2">
            <button id="btnClear" class="btn btn-secondary w-100">Clear</button>
        </div>
    </div>

    <div class="table-responsive table-container" id="tableContainer">
        <table id="orderHistoryTable" class="table table-bordered table-striped table-sm" style="width:100%">
            <thead class="thead-light">
                <tr>
                    <th>ID</th>
                    <th>Customer Name</th>
                    <th>Customer Phone</th>
                    <th>Table No</th>
                    <th>Item Name</th>
                    <th>Price</th>
                    <th>Total Items</th>
                    <th>Payment Mode</th>
                    <th>Date</th>
                    <th class="dt-control">View Bill</th>
                </tr>
            </thead>
            <tbody>
                <!-- History rows will appear here -->
            </tbody>
        </table>
    </div>

    <!-- Bill Modal -->

    <div id="bill-modal">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">Order Bill</h2>
                <button class="close-btn" onclick="closeBillModal()">&times;</button>
            </div>
            <div id="bill-content">
                <!-- Bill content will be generated here -->
            </div>
            <div style="text-align: center;  display: flex; justify-content: center;">
                <button class="btn-print" onclick="printBill()">
                    🖨️ Print Physical Bill
                </button>
                <button class="btn-view" onclick="downloadBill()">
                    💾 Save as PDF
                </button>
            </div>
        </div>
    </div>

</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>